<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/colorPrimaryDark"
        tools:context=".AddChatroomActivity">

        <TextView
            android:id="@+id/add_chatroom_other_option_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:minLines="2"
            android:text="@string/add_chatroom_other_option"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_chatroom_gaming" />

        <ImageView
            android:id="@+id/add_chatroom_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/add_chatroom_prompt_text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:minLines="2"
            android:text="@string/add_chatroom_prompt"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/add_chatroom_travel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/travelButtonColor"
            android:text="Travel"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/add_chatroom_business"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/add_chatroom_general"
            app:layout_constraintTop_toBottomOf="@+id/add_chatroom_prompt_text" />

        <Button
            android:id="@+id/add_chatroom_general"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/generalButtonColor"
            android:text="General"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/add_chatroom_gaming"
            app:layout_constraintEnd_toStartOf="@+id/add_chatroom_travel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_chatroom_prompt_text" />

        <Button
            android:id="@+id/add_chatroom_business"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/businessButtonColor"
            android:text="Business"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/add_chatroom_gaming"
            app:layout_constraintTop_toBottomOf="@+id/add_chatroom_travel" />

        <Button
            android:id="@+id/add_chatroom_gaming"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/gamingButtonColor"
            android:text="Gaming"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/add_chatroom_business"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_chatroom_general" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_chatroom_other_option_text"
            app:layout_constraintVertical_bias="0.494"
            app:srcCompat="@drawable/thy_a320" />

        <Button
            android:id="@+id/button_mock"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_chatroom_other_option_text"
            app:layout_constraintVertical_bias="0.38" />

        <Spinner
            android:id="@+id/add_chatroom_spinner"
            android:layout_width="368dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="parent"
            android:spinnerMode="dialog"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>